<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_activity3"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:src="@drawable/image_activity3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_activity3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_activity3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="@string/description_activity3"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"/>

            <!-- Back Button -->
            <Button
                android:id="@+id/button_back_activity3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
